
<div class="editar-perfil">
{{#if user}}
<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3 style="text-align:center">EDITAR PERFIL<a style="position:absolute;right:20px;" href="../"  title="Volver"><i style="color:rgb(9,5,73)" class="fa-solid fa-circle-chevron-left"></i></a></h3>
        </div>
        <div class="card-body">
            <form action="/usuarios/perfil/editar-perfil/{{user._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="mt-3">
                    Editar nombre y apellidos: <input type="text" name="nombre" class="form-control" placeholder="Nombre y apellidos"
                        value="{{user.nombre}}">
                </div>

                <br>

                <div class="mt-3">
                    Editar usuario: <input type="text" name="nomusuario" class="form-control" placeholder="Usuario"
                        value="{{user.nomusuario}}">
                </div>

                <br>

                <div class="mt-3">
                    Editar email: <input type="text" name="email" value="{{user.email}}" class="form-control" placeholder="Correo electrÃ³nico">
                </div>
                
                <br>

                <div class="mt-3">
                    Clave actual: <input type="password" name="clave" value="{{user.clave}}" class="form-control" placeholder="Nueva clave" disabled>
                </div>

                <div class="mt-3">
                    <button class="btn btn-primary w-100" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>
{{/if}}
</div>


<!--ESTILOS Y SCRIPTS-->
<script>
        window.onload = function () {
            document.getElementById('perfil').style.fontWeight = 'bold';
            document.getElementById('perfil').style.textDecoration = 'overline';
        }
</script>

