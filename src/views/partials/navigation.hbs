</div>
<div class="news-wrapper">
  <ul class="footer-item">
    {{#each noticias}}
    <li class="news-item"><strong style="text-transform:uppercase"><a style="color:white;text-decoration:none"
          href="/noticias/{{categoria}}">{{categoria}}: </a></strong><a style="color:white;text-decoration:none"
        href="/noticias/leer-noticia/{{_id}}">{{titular}}</a></li>
    &nbsp;&nbsp;/&nbsp;&nbsp;
